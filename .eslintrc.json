{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["react", "prettier"],
  "rules": {
    "import/newline-after-import": ["warn", { "count": 1 }],
    "no-unused-vars": "warn",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/no-unused-state": "warn",
    "prettier/prettier": [
      "warn",
      {
        "usePrettierrc": false,
        "printWidth": 80,
        "trailingComma": "es5",
        "semi": true,
        "jsxSingleQuote": false,
        "singleQuote": true,
        "tabWidth": 2,
        "useTabs": false
      }
    ]
  }
}
